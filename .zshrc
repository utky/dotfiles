# User vim as the default editor
export EDITOR=vim

# Set language to Japanese
export LANG=ja_JP.UTF-8

# Enable groovy sdk
export GROOVY_HOME=/usr/local/Cellar/groovy/2.1.3/libexec

# Enable grails tools
export GRAILS_HOME=~/Library/grails-2.3.4

# Haskell home
export GHC_HOME=~/Library/Haskell

# Export user specific path
export PATH="$HOME/bin:$GRAILS_HOME/bin:$PATH"
