#!/bin/sh


SCRIPTDIR=`dirname $0`
TARGET=${HOME}

pushd ${SCRIPTDIR}
DOTFILES=$(pwd)
popd 

if [ -d "$1" ] ; then
    TARGET=$1
fi

if [ -z "${TARGET}" ] ; then
    echo "Usage: target-path"
    exit 1
fi


function copy_target() {
    homefiles="ghci gvimrc vimrc zshrc gitconfig zshenv"
    pushd "${TARGET}"
    for i in ${homefiles} ; do
      ln -s "${DOTFILES}/$i" ".$i"
    done
    popd
}

function main() {
    copy_target
}


main
